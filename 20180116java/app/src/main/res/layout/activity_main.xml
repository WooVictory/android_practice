<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.cosmos.a20180116java.MainActivity">


    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#10cbcb"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:layout_gravity="center"
        android:id="@+id/editText"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_above="@+id/next_btn"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:layout_centerInParent="true"/>

    <Button
    android:id="@+id/Cal_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="계산기"
    android:layout_gravity="center"
    />

    <Button
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/spinnerExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spinner"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/three_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3th"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exam_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exam"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/DateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datepicker"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/TimeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timepicker"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/moneyUnitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화폐"
            android:layout_gravity="center"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/orientation_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="orientation" />
        <Button
            android:id="@+id/spinner2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="spinner2" />
        <Button
            android:id="@+id/gird_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Grid" />
    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toast"
        android:id="@+id/toast_btn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="font"
        android:id="@+id/font_btn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="TabExam"
        android:id="@+id/tab_exam_btn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="WebView"
        android:id="@+id/web_view_btn"/>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dialog_btn"
            android:text="dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="frag"
            android:id="@+id/fragment_go_btn"/>

        <Button
            android:id="@+id/page_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="viewPager"/>
        <Button
            android:id="@+id/menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="menu"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/progress_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="progress"/>

        <Button
            android:id="@+id/anim_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="anim"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_btn"
            android:text="fragment"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="main3"
            android:id="@+id/main3_btn"/>
        </LinearLayout>



</LinearLayout>
